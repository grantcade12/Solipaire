<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/statsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/statistics"
        android:textAlignment="center"
        android:textSize="34sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statsTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/statsP1Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/player_1"
                        android:textColor="#FF0000"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p1GamesWonTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/games_won"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p1RatioTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/win_loss_ratio"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p1GamesPlayedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/games_played"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p1TotalPointsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_points"
                        android:textSize="34sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/statsP1Title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text=""
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p1GamesWon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text=""
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p1Ratio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text=""
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p1GamesPlayed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text=""
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p1TotalPoints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text=""
                        android:textSize="34sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/statsP2Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/player_2"
                        android:textColor="#FF0000"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p2GamesWonTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/games_won"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p2RatioTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/win_loss_ratio"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p2GamesPlayedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/games_played"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p2TotalPointsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_points"
                        android:textSize="34sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/statsP2Title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text=""
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p2GamesWon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text=""
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p2Ratio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text=""
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p2GamesPlayed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text=""
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/p2TotalPoints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text=""
                        android:textSize="34sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/exitStatsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="60dp"
                    android:paddingEnd="60dp"
                    android:text="@string/return_text"
                    android:textSize="34sp" />

                <com.facebook.share.widget.ShareButton
                    android:id="@+id/statsShareBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Share"
                    android:textSize="24sp"
                    app:srcCompat="@drawable/ic_baseline_share_24" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>